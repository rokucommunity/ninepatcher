{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            "smartStep": true,
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "sourceMaps": true,
            "args": [
                "--timeout",
                "0"
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/typescript/**"
            ]
        }
    ]
}